{
  "name": "screen-recorder",
  "version": "1.0.1",
  "main": "main.js",
  "description": "Automatic screen recording and uploading to a server",
  "author": "Stephen Akinbobola",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-window": "electron-packager . screen-recorder --platform=win32 --arch=x64 --out=dist --overwrite",
    "build-mac": "electron-packager . screen-recorder --platform=darwin --arch=x64 --out=dist --overwrite",
    "build-linux": "electron-packager . screen-recorder --platform=linux --arch=x64 --out=dist --overwrite"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-store": "^10.1.0",
    "express": "^4.18.2",
    "form-data": "^4.0.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^23.6.0",
    "electron-packager": "^15.5.0"
  }
}
